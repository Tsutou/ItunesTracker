<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="artist"
            type="com.example.nijimac103.itunestracker.service.model.Artist" />

        <variable
            name="callback"
            type="com.example.nijimac103.itunestracker.service.callback.ArtistClickCallback" />
    </data>

    <com.facebook.shimmer.ShimmerFrameLayout xmlns:shimmer="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_repeat_count="1"
        app:shimmer_base_alpha="0.9"
        app:shimmer_highlight_color="@color/colorAccent"
        shimmer:duration="800">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:onClick="@{() ->  callback.onClick(artist)}"
            android:orientation="horizontal"
            android:background="@drawable/main_theme"
            app:cardBackgroundColor="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/item_horizontal_margin"
                    android:layout_marginStart="@dimen/item_horizontal_margin"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:textColor="@color/colorWhite"
                        android:text="@{artist.artistName}"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/languages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:text="@{artist.trackCensoredName}" />

                    <TextView
                        android:id="@+id/artist_watchers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{artist.releaseDate}"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/artist_text" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:imageUrl="@{artist.artworkUrl100}" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>
