<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="artist"
            type="com.example.nijimac103.itunestracker.service.model.Artist" />

        <variable
            name="callback"
            type="com.example.nijimac103.itunestracker.service.callback.ArtistClickCallback" />
    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:onClick="@{() ->  callback.onClick(artist)}"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/item_horizontal_margin"
                android:layout_marginStart="@dimen/item_horizontal_margin"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{artist.artistName}"
                    android:autoSizeTextType="uniform"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{artist.trackCensoredName}"
                    android:autoSizeTextType="uniform"  />

                <TextView
                    android:id="@+id/artist_watchers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{artist.releaseDate}"
                    android:textSize="@dimen/artist_text" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:padding="8dp"
                app:imageUrl="@{artist.artworkUrl100}" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
