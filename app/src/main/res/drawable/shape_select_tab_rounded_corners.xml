<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="5dp">

        <shape
            android:shape="rectangle"
            android:top="10dp">

            <gradient
                android:angle="225"
                android:centerColor="#8B8FE3"
                android:endColor="#BD2F61"
                android:startColor="#97F9E5"
                android:type="linear" />

            <!-- 角丸 -->
            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="3dp" />

            <stroke
                android:color="@color/colorWhite"
                android:width="1dp" />

        </shape>
    </item>
</layer-list>
